<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Navbar</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                        <a class="nav-link {{ app.current_route == 'home'? 'active' : '' }}" aria-current="page" href="{{ path('home') }}">Home</a>
                        <a class="nav-link {{ app.current_route == ''? 'home' : '' }}" href="#">Vehicules</a>
                        {% if app.user %}
                            {% if 'ROLE_ADMIN' in app.user.roles %}
                                <a href="{{ path('admin') }}" class="nav-link {{ app.current_route() == 'admin'?'active':'' }}">Admin Panel</a>
                            {% endif %}
                        {% endif %}
                        <a class="nav-link {{ app.current_route == 'about'? 'active' : '' }}" href="{{ path('about') }}">A Propos</a>
                        <a class="nav-link {{ app.current_route == 'contact'? 'active' : '' }}" href="{{ path('contact') }}">Contact</a>

                    </div>
                </div>
                <div class="form-inline my-2 my-lg-0">
                    <div class="navbar-nav">
                        {% if not app.user %}
                            <a class="nav-link" href="{{ path('register') }}">Register</a>
                            <a class="nav-link" href="{{ path('app_login') }}">Login</a>
                        {% else %}
                            <a class="nav-link {{ app.current_route starts with 'user.'?'active':'' }}" href="{{ path('user.show',{id: app.user.id}) }}">Profile</a>
                            <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                        {% endif %}
                    </div>
                </div>
            </div>

        </nav>
         <div class="container">
            {% block body %}{% endblock %}
         </div>
    </body>
</html>
